<script type="text/html" template>
    <link rel="stylesheet" href="{{ layui.setter.base }}style/template.css?v={{ layui.admin.v }}-1" media="all">
</script>

<form class="layui-form" id="formData" action="" lay-filter="example">
    <div class="layui-form-item" lay-filter="classes-form">
        <div class="layui-form-item">
            <label class="layui-form-label">模板名称</label>
            <div class="layui-input-block">
                <script type="text/html" template>
                    <input type="hidden" name="Id" value="{{ d.params.id || '' }}" lay-verify="required" class="layui-input">
                    <input type="text" name="Name" value="{{ d.params.name || '' }}" placeholder="" lay-verify="required|specialCharacters" autocomplete="off" class="layui-input">
                </script>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">备注</label>
            <div class="layui-input-block">
                <script type="text/html" template>
                    <textarea type="text" name="Remark" lay-verify="describelength" class="layui-textarea">{{ d.params.remark || '' }}</textarea>
                </script>
            </div>
        </div>
        <div class="layui-form-item content-center">
            <button class="layui-btn" type="button" lay-submit lay-filter="templatetype-form-submit">保存</button>
        </div>
    </div>
</form>