<script type="text/html" template>
    <link rel="stylesheet" href="{{ layui.setter.base }}style/template.css?v={{ layui.admin.v }}-1" media="all">
</script>

<form class="layui-form" id="roles-add-form" lay-filter="roles-add-form">
    <div class="layui-form-item">
        <label class="layui-form-label">角色名称</label>
        <div class="layui-input-block ">
            <script type="text/html" template>
                <input type="hidden" id="Id" name="Id" value="{{ d.params.id || '' }}" />
                <input type="text" id="roleName" name="RoleName" value="{{ d.params.roleName || '' }}" lay-verify="required" maxlength="20" autocomplete="off" placeholder="" class="layui-input">
            </script>
        </div>
    </div>
    <div class="layui-form-item">
        <label class="layui-form-label">角色描述</label>
        <div class="layui-input-block">
            <script type="text/html" template>
                <textarea placeholder="" id="description" name="Description" lay-verify="" maxlength="40" class="layui-textarea roles-textarea">{{ d.params.description || '' }}</textarea>
            </script>
        </div>
    </div>
    <div class="layui-form-item content-center">
        <button class="layui-btn" type="button" lay-submit lay-filter="roles-edit-form-submit">保存</button>
    </div>
</form>