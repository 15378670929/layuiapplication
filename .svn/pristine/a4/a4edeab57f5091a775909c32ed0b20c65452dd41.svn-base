<script type="text/html" template>
    <link rel="stylesheet" href="{{ layui.setter.base }}style/template.css?v={{ layui.admin.v }}-1" media="all">
</script>

<form class="layui-form" id="classes-edit-form" lay-filter="classes-edit-form">
    <div class="layui-form-item">
        <div class="layui-form-item">
            <label class="layui-form-label">机构</label>
            <div class="layui-input-block">
                <select class="sel" id="orgId" name="OrgId" lay-verify="required|select" lay-filter="orgfilters"></select>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">年级名称</label>
            <div class="layui-input-block">
                <script type="text/html" template>
                    <input type="hidden" name="Id" value="{{ d.params.id || '' }}" lay-verify="required" class="layui-input">
                    <input type="text" name="GradeName" value="{{ d.params.gradeName || '' }}" placeholder="" maxlength="20" lay-verify="required" autocomplete="off" class="layui-input">
                </script>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">班级名称</label>
            <div class="layui-input-block">
                <script type="text/html" template>
                    <input type="text" name="ClassName" value="{{ d.params.className || '' }}" placeholder="" maxlength="20" lay-verify="required" autocomplete="off" class="layui-input">
                </script>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">班级类型</label>
            <div class="layui-input-block">
                <script type="text/html" template>
                    <select name="ClassesType" lay-verify="required|select">
                        <option value="">请选择</option>
                        <option value="1">行政班</option>
                        <option value="2">教学班</option>
                    </select>
                </script>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">入学年份</label>
            <div class="layui-input-block">
                <script type="text/html" template>
                    <input type="text" readonly="readonly" id="startschoolyear" name="StartSchoolYear" value="{{ d.params.startSchoolYear || '' }}" placeholder="" lay-verify="required|nowyear" autocomplete="off" class="layui-input">
                </script>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">负责老师</label>
            <div class="layui-input-block">
                <script type="text/html" template>
                    <input type="text" name="Teacher" value="{{ d.params.teacher || '' }}" placeholder="" maxlength="10" lay-verify="required|chineselength" autocomplete="off" class="layui-input">
                </script>
            </div>
        </div>
        <div class="layui-form-item">
            <label class="layui-form-label">联系电话</label>
            <div class="layui-input-block">
                <script type="text/html" template>
                    <input type="text" name="Phone" value="{{ d.params.phone || '' }}" placeholder="" maxlength="11" lay-verify="required|phone" autocomplete="off" class="layui-input">
                </script>
            </div>
        </div>
        <div class="layui-form-item content-center">
            <button class="layui-btn" type="button" lay-submit lay-filter="classes-form-submit">保存</button>
        </div>
    </div>
</form>